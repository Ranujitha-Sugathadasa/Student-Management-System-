@model IEnumerable<StudentManagementApplication.Models.Student>
using System;
namespace StudentManagementApplication.Views.Student
{
<div class="container">
    <h2>Students</h2>
    <a asp-action="Create" class="btn btn-primary">Add New Student</a>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Courses</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Student in  Model)
            {
                <tr>
                    <td>@Student.Name</td>
                    <td>@Student.Age</td>
                    <td>@Student.Gender</td>
                    <td>
                        @foreach (var course in Student.Courses)
                        {
                            <span>@course.Name</span><br />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Student.StudentId" class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}